% Sidebar is a boxed minipage that can contain verbatim.
% Changed shadow box to double box.
\renewenvironment{sidebar}[1][0.95\textwidth]{
  \hspace{0mm}\newline%
  \noindent\begin{Sbox}\begin{minipage}{#1}%
  \setlength\parskip{\medskipamount}%
}{
  \end{minipage}\end{Sbox}\doublebox{\TheSbox}%
}

% For DocBook literallayout elements, see `./dblatex/dblatex-readme.txt`.
\usepackage{alltt}
\usepackage{title}
\usepackage{bookmark}
\usepackage{zref-abspage}
\bookmarksetup{
  numbered,
}

% set up standard US paper size
\paperwidth=8.5in
\paperheight=11in

% spacing between header and body
\headsep=20pt

% don't right justify text
\raggedright

% control the headers/footers
% easy to turn on header/footer ruling with the following lines
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}
\renewcommand{\plainheadrulewidth}{0pt}
\renewcommand{\plainfootrulewidth}{0pt}
% content of the headers/footers
\def\frontmatter{\cleardoublepage\pagenumbering{arabic}
                  \lhead[]{}
                  \chead[]{}
                  \rhead[]{\textsf{\DBKtitle}}
                  \rfoot[]{\textsf{\thepage{}}}
}
\def\mainmatter{\cleardoublepage\pagenumbering{arabic}
                  \setcounter{page}{\value{abspage}}
                  \stepcounter{page}
                  \lhead[]{}
                  \chead[]{}
                  \rhead[]{\textsf{\DBKtitle}}
                  \rfoot[]{\textsf{\thepage{}}}
}

% make the bulleted lists, etc., more compact
\setlist{itemsep=0pt}
